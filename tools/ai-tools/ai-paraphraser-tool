    <script>
        let selectedMode = 'standard';
        let paraphrasedText = '';

        // Update word count on input
        document.getElementById('inputText').addEventListener('input', function() {
            const text = this.value.trim();
            const words = text.split(/\s+/).filter(w => w.length > 0);
            document.getElementById('inputCount').textContent = words.length;
        });

        function selectMode(mode) {
            selectedMode = mode;
            document.querySelectorAll('.mode-btn').forEach(btn => {
                btn.classList.remove('active', 'bg-purple-600', 'text-white', 'border-purple-600');
                btn.classList.add('bg-white', 'text-gray-700', 'border-gray-300');
            });
            const btn = document.getElementById(`mode-${mode}`);
            btn.classList.add('active', 'bg-purple-600', 'text-white', 'border-purple-600');
            btn.classList.remove('bg-white', 'text-gray-700', 'border-gray-300');
        }

        async function paraphraseText() {
            const inputText = document.getElementById('inputText').value.trim();
            
            if (!inputText) {
                alert('Please enter some text to paraphrase!');
                return;
            }

            if (inputText.split(/\s+/).length < 3) {
                alert('Please enter at least 3 words to paraphrase!');
                return;
            }

            // Show loading
            document.getElementById('paraphraseBtn').disabled = true;
            document.getElementById('loadingState').classList.remove('hidden');
            document.getElementById('outputText').innerHTML = '<div class="flex items-center justify-center h-full text-gray-400"><i class="fas fa-spinner fa-spin text-4xl"></i></div>';

            // Build prompt based on mode
            let modeInstruction = '';
            switch(selectedMode) {
                case 'standard':
                    modeInstruction = 'Rewrite the following text to be unique while maintaining the original meaning. Use different words and sentence structures.';
                    break;
                case 'fluency':
                    modeInstruction = 'Rewrite the following text to improve fluency and readability while keeping the meaning the same.';
                    break;
                case 'formal':
                    modeInstruction = 'Rewrite the following text in a formal, professional tone while maintaining the original meaning.';
                    break;
                case 'creative':
                    modeInstruction = 'Rewrite the following text in a creative and engaging way while preserving the core message.';
                    break;
            }

            const prompt = `${modeInstruction}

Original text: "${inputText}"

Please provide only the paraphrased version without any explanation or commentary.`;

            try {
                const response = await fetch('https://api.anthropic.com/v1/messages', {
                    method: 'POST',
                    headers: {
                        'Content-Type': 'application/json',
                    },
                    body: JSON.stringify({
                        model: 'claude-sonnet-4-20250514',
                        max_tokens: 1000,
                        messages: [
                            {
                                role: 'user',
                                content: prompt
                            }
                        ]
                    })
                });

                const data = await response.json();
                
                if (data.content && data.content[0] && data.content[0].text) {
                    paraphrasedText = data.content[0].text.trim();
                    displayOutput(paraphrasedText);
                } else {
                    throw new Error('Invalid response');
                }

            } catch (error) {
                console.error('Error:', error);
                document.getElementById('outputText').innerHTML = `
                    <div class="flex items-center justify-center h-full text-red-500">
                        <div class="text-center">
                            <i class="fas fa-exclamation-triangle text-4xl mb-2"></i>
                            <p>Error paraphrasing text. Please try again.</p>
                        </div>
                    </div>`;
            } finally {
                document.getElementById('paraphraseBtn').disabled = false;
                document.getElementById('loadingState').classList.add('hidden');
            }
        }

        function displayOutput(text) {
            document.getElementById('outputText').textContent = text;
            
            const words = text.split(/\s+/).filter(w => w.length > 0);
            document.getElementById('outputCount').textContent = words.length;
            
            document.getElementById('copyBtn').disabled = false;
            document.getElementById('downloadBtn').disabled = false;
        }

        function clearInput() {
            document.getElementById('inputText').value = '';
            document.getElementById('inputCount').textContent = '0';
        }

        async function pasteText() {
            try {
                const text = await navigator.clipboard.readText();
                document.getElementById('inputText').value = text;
                const words = text.split(/\s+/).filter(w => w.length > 0);
                document.getElementById('inputCount').textContent = words.length;
            } catch (err) {
                alert('Failed to paste. Please use Ctrl+V or Cmd+V manually.');
            }
        }

        function copyOutput() {
            navigator.clipboard.writeText(paraphrasedText).then(() => {
                const btn = document.getElementById('copyBtn');
                const originalHTML = btn.innerHTML;
                btn.innerHTML = '<i class="fas fa-check mr-2"></i>Copied!';
                btn.classList.remove('bg-green-500', 'hover:bg-green-600');
                btn.classList.add('bg-green-600');
                setTimeout(() => {
                    btn.innerHTML = originalHTML;
                    btn.classList.add('bg-green-500', 'hover:bg-green-600');
                    btn.classList.remove('bg-green-600');
                }, 2000);
            }).catch(() => {
                alert('Failed to copy. Please select and copy manually.');
            });
        }

        function downloadOutput() {
            const blob = new Blob([paraphrasedText], { type: 'text/plain' });
            const url = URL.createObjectURL(blob);
            const a = document.createElement('a');
            a.href = url;
            a.download = 'paraphrased_text.txt';
            a.click();
            URL.revokeObjectURL(url);
        }

        // Initialize
        selectMode('standard');
    </script>

    <style>
        .mode-btn.active {
            background-color: #7c3aed;
            color: white;
            border-color: #7c3aed;
        }
        
        .mode-btn:not(.active) {
            background-color: white;
            color: #374151;
            border-color: #d1d5db;
        }
        
        .mode-btn:not(.active):hover {
            background-color: #f3f4f6;
            border-color: #9ca3af;
        }

        button:disabled {
            opacity: 0.5;
            cursor: not-allowed;
        }
    </style>
